<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.mojohao.soapui_ng.dao.TestResultDao">
    <select id="getAllTestResults" resultType="TestResult">
        SELECT * FROM TEST_RESULT
    </select>
    <select id="queryTestResultById" resultType="TestResult">
        SELECT * FROM TEST_RESULT WHERE TEST_RESULT.TEST_ID=#{testId} AND TEST_RESULT.CASE_ID=#{caseId}
    </select>
    <select id="queryTestResultByCondition" parameterType="TestResult" resultType="TestResult">
        SELECT * FROM TEST_RESULT
        WHERE 1=1
        <if test="testId!=null and testId!=''">
            AND TEST_RESULT.TEST_ID=#{testId}
        </if>
        <if test="caseId!=null and caseId!=''">
            AND TEST_RESULT.CASE_ID=#{caseId}
        </if>
        <if test="assertion!=null and assertion!=''">
            AND TEST_RESULT.ASSERTION=#{assertion}
        </if>
    </select>
    <select id="categoryByTestId" resultType="io.mojohao.soapui_ng.entity.ChartTypeDto">
        select TEST_ID type,count(1) number
        from test_result
        group by TEST_ID
    </select>
    <select id="categoryByCaseId" resultType="io.mojohao.soapui_ng.entity.ChartTypeDto">
        select CASE_ID type,count(1) number
        from test_result
        group by CASE_ID
    </select>
    <select id="categoryByAssertion" resultType="io.mojohao.soapui_ng.entity.ChartTypeDto">
        select ASSERTION type,count(1) number
        from test_result
        group by ASSERTION
    </select>
    <insert id="insertTestResult" parameterType="TestResult" useGeneratedKeys="false">
        insert into TEST_RESULT(TEST_ID,CASE_ID,TEST_DATE,DESIRED_RESPONSE,ACTUAL_RESPONSE,ASSERTION)
        values(#{testId},#{caseId},#{testDate},#{desiredResponse},#{actualResponse},#{assertion})
    </insert>
    <delete id="deleteTestResult">
        DELETE FROM TEST_RESULT WHERE TEST_RESULT.TEST_ID=#{testId} AND TEST_RESULT.CASE_ID=#{caseId}
    </delete>
</mapper>